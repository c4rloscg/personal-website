{
    "name": "felixwebsite",
    "version": "1.0.0",
    "description": "felix website built with react, typescript, nextjs for ssr, redux, wordpress api",
    "main": "server.js",
    "scripts": {
        "dev": "NODE_ENV=development next",
        "build": "NODE_ENV=production next build",
        "start": "NODE_ENV=production ts-node server.ts",
        "precommit": "pretty-quick --staged",
        "prettier": "prettier --print-width 120 --semi --single-quote --trailing-comma es5 --tab-width=4 --write ./src/**/*.{ts,tsx}",
        "now-build": "NODE_ENV=production next build",
        "ts-lint": "tslint --config ./tslint.json --project ./tsconfig.json ./src/**/*.{ts,tsx} --exclude ./node_modules/**/*.{j,t}s",
        "tslint-check": "tslint-config-prettier-check ./tslint.json"
    },
    "author": "Felix Noriel",
    "license": "ISC",
    "dependencies": {
        "axios": "^0.18.0",
        "body-parser": "^1.19.0",
        "bulma": "^0.7.5",
        "bulma-extensions": "^2.2.2",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "css-loader": "^1.0.1",
        "express": "^4.17.1",
        "fs": "0.0.1-security",
        "isomorphic-unfetch": "^2.1.1",
        "lodash": "^4.17.15",
        "meta-shortcodes": "^1.0.3",
        "moment": "^2.24.0",
        "next": "^9.2.2",
        "next-routes": "^1.4.2",
        "nprogress": "^0.2.0",
        "parse": "^2.11.0",
        "path": "^0.12.7",
        "react": "^16.13.0",
        "react-burger-menu": "^2.6.13",
        "react-dom": "^16.13.0",
        "react-google-tag-manager": "^2.2.1",
        "react-grid-gallery": "^0.5.5",
        "react-images": "^0.5.19",
        "react-redux": "^5.1.2",
        "react-router-redux": "^4.0.8",
        "react-scroll": "^1.7.16",
        "redux": "^4.0.5",
        "redux-burger-menu": "^0.2.8",
        "redux-devtools-extension": "^2.13.8",
        "redux-thunk": "^2.3.0",
        "store": "^2.0.12",
        "ts-node": "^8.6.2"
    },
    "devDependencies": {
        "@babel/core": "^7.8.6",
        "@babel/preset-env": "^7.8.6",
        "@babel/preset-react": "^7.8.3",
        "@now/node": "^0.9.0",
        "@types/lodash": "^4.14.149",
        "@types/next": "^8.0.7",
        "@types/next-redux-wrapper": "^2.0.2",
        "@types/react": "16.8.4",
        "@types/react-burger-menu": "^2.6.0",
        "@types/react-dom": "^16.9.5",
        "@types/react-redux": "^7.1.7",
        "@types/react-router-redux": "^5.0.18",
        "@types/react-scroll": "^1.5.4",
        "@types/store": "^2.0.1",
        "@zeit/next-css": "^1.0.1",
        "@zeit/next-sass": "^1.0.1",
        "autoprefixer": "^9.7.4",
        "babel-plugin-transform-class-properties": "^6.24.1",
        "babel-plugin-transform-decorators-legacy": "^1.3.5",
        "husky": "^2.4.1",
        "next-redux-wrapper": "^3.0.0",
        "node-sass": "^4.13.1",
        "nodemon": "^1.19.4",
        "postcss-css-variables": "^0.9.0",
        "postcss-cssnext": "^3.1.0",
        "postcss-import": "^11.1.0",
        "postcss-loader": "^2.1.6",
        "prettier": "^1.19.1",
        "pretty-quick": "^1.11.1",
        "tslint": "^5.20.1",
        "tslint-config-prettier": "^1.18.0",
        "tslint-plugin-prettier": "^2.1.0",
        "tslint-react": "^4.2.0",
        "typesafe-actions": "^3.2.1",
        "typescript": "^3.8.3",
        "webpack": "^4.42.0"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(\\.|/)(test|spec)\\.(jsx?|tsx?)$",
        "testPathIgnorePatterns": [
            "/node_modules/",
            "/bootstrap/",
            "/config/"
        ],
        "moduleNameMapper": {
            "\\.scss$": "<rootDir>/__mocks__/styleMock.js",
            "\\.css$": "<rootDir>/__mocks__/styleMock.js"
        },
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    }
}
